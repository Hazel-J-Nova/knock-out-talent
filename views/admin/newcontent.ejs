
<link rel="stylesheet" href="../Stylesheets/dateTime.css">
<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New content</h1>
    <div class="col-6 offset-3">
        <form action="/admin/newcontent" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="content[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">

            </div>
              <div class="mb-3">
                  <button class="accordion btn">schedule post?</button>
                    <div class="panel">
                   
                <input class="form-control" type="datetime-local" id="dRW" name="content[date]" >
               
                </div>
                
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="title">category</label>
                <input class="form-control" type="text" id="category" name="content[category]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            

            <div class="mb-3">
                <label class="form-label" for="price"> Content Prices seperate by commas</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="content[price]" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="content[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
           
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="content" name="content" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Content to upload</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
            </div>
            
            </div> 
            <div class="mb-3">
                <button class="btn btn-success">Upload Content</button>
            </div>
        </form>
    <script src="/JavaScript/accordian.js"></script>